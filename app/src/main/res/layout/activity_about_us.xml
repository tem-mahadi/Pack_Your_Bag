<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#e3acac">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/aboutUsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:padding="8dp"/>

    <!-- ImageView Below Title -->
    <ImageView
        android:id="@+id/aboutUsImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/my_image"
        android:contentDescription="About Us Image"
        android:scaleType="centerCrop"
        android:layout_below="@id/aboutUsTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <!-- Description TextView Below Image -->
    <TextView
        android:id="@+id/aboutUsDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pack Your Bag is your ultimate travel companion, helping you organize and pack efficiently for every trip. Whether you're planning a weekend getaway or a long adventure, we've got you covered with personalized packing lists, travel tips, and more."
        android:textSize="16sp"
        android:textColor="@color/black"
        android:lineSpacingExtra="4dp"
        android:layout_below="@id/aboutUsImage"
        android:paddingBottom="16dp"/>

    <!-- Mission Statement TextView -->
    <TextView
        android:id="@+id/missionStatement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Our Mission"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/aboutUsDescription"
        android:paddingBottom="8dp"/>

    <!-- Mission Description TextView -->
    <TextView
        android:id="@+id/missionDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To make travel stress-free and enjoyable by providing the tools and resources needed to plan, pack, and prepare for any journey."
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="@color/purple_700"
        android:lineSpacingExtra="4dp"
        android:layout_below="@id/missionStatement"/>

    <!-- 'From' TextView -->
    <TextView
        android:id="@+id/txtFrom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="from"
        android:layout_marginTop="20dp"
        android:layout_below="@id/missionDescription"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textStyle="italic"/>

    <!-- Author Name TextView -->
    <TextView
        android:id="@+id/txtMe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TEM MAHADI"
        android:textSize="30dp"
        android:textColor="@color/purple_soft"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@id/txtFrom"/>

    <!-- Bottom ImageView -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:src="@drawable/shopping_bag"
        android:layout_below="@id/txtMe"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

</RelativeLayout>
